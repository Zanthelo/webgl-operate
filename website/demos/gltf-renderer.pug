block canvas

  div.spinnercontainer
    canvas(id = 'demo-canvas', data-backend = 'auto').img-fluid.w-100
    div.spinner
        div
        div
        div
        div

  div.row
    div.col
      .form-group.row
        label(for = 'asset-select').col-md-1.col-form-label Asset:
        .col-md-2
          select.custom-select.custom-select-sm.multiple#asset-select
            option(value='https://raw.githubusercontent.com/KhronosGroup/glTF-Sample-Models/master/2.0/BoxTextured/glTF/BoxTextured.gltf') Textured Cube
            option(value='https://raw.githubusercontent.com/KhronosGroup/glTF-Sample-Models/master/2.0/Cube/glTF/Cube.gltf') PBR Cube
            option(value='https://raw.githubusercontent.com/KhronosGroup/glTF-Sample-Models/master/2.0/Sponza/glTF/Sponza.gltf') Sponza
            option(value='https://raw.githubusercontent.com/KhronosGroup/glTF-Sample-Models/master/2.0/SciFiHelmet/glTF/SciFiHelmet.gltf') Sci-Fi Helmet
            option(value='https://raw.githubusercontent.com/KhronosGroup/glTF-Sample-Models/master/2.0/DamagedHelmet/glTF/DamagedHelmet.gltf') Damaged Helmet
            option(value='https://raw.githubusercontent.com/KhronosGroup/glTF-Sample-Models/master/2.0/MetalRoughSpheres/glTF/MetalRoughSpheres.gltf') PBR Test Spheres
            option(value='https://raw.githubusercontent.com/KhronosGroup/glTF-Sample-Models/master/2.0/MultiUVTest/glTF/MultiUVTest.gltf') Multi UV Test
            option(value='https://raw.githubusercontent.com/KhronosGroup/glTF-Sample-Models/master/2.0/AlphaBlendModeTest/glTF/AlphaBlendModeTest.gltf') Alpha Blend Test

